%h2 posts
%ul
  -@beef.posts.each do |post|
    %li
      %a{:href => post[:url]}= "#{post[:title]}"
      %span#date= "posted #{post[:diff]}"
%hr
%h3 category cloud
%p
  -@beef.clouds[:cats].each do |k, v|
    %a{:href => "/category/#{k}"}= "#{@beef.unhyphenate(k)} (#{v})"
%h3 tag cloud
%p
  -@beef.clouds[:tags].each do |k, v|
    %a{:href => "/tag/#{k}"}= "#{@beef.unhyphenate(k)} (#{v})"